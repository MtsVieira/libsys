<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/usuario.css">
    <titulo>UsuÃ¡rio - Alterar Senha</titulo>
    </head>

    <body>

        <%-include('partials/navbar.html')%>
        <div class="container-fluid">
            <div class="row">
                <%-include('partials/sidebar.html')%>
                <div class="col-md-10 content">
                    <div class="row">
                        <div class="col-md-11 alterar-senha">
                            <p class="display-4">Alterar Senha</p>
                            <form class="" method="post">
                                <div class="form-group row">
                                    <input type="password" name="password" value="<%=res.password%>" hidden>
                                    <input type="text" name="user_id" value="<%=res.usuario_id%>" hidden>
                                    <label class="col-sm-2 col-form-label">Senha Antiga</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="senhaAntiga">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Nova Senha</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="novaSenha">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Confirmar Senha</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="confirmarSenha">
                                    </div>
                                </div>
                                <hr>
                                <div>
                                    <button type="submit" class="btn btn-primary">Alterar</button>
                                    <br>
                                </div>
                                <div class="">
                                    <% for(var i=0; i< errs.length; i++){ %>
                                        <%= errs[i].message; %>
                                        <br>
                                    <% } %>
                                    <% for(var i=0; i< success.length; i++){ %>
                                        <%= success[i].message; %>
                                        <br>
                                    <% } %>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%-include('../partials/footer.html')%>
