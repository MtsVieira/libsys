<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/usuario.css">
    <titulo>Solicitar Novo Livro</titulo>
    </head>

    <body>

        <%-include('partials/navbar.html')%>
        <div class="container-fluid">
            <div class="row">
                <%-include('partials/sidebar.html')%>
                <div class="col-md-10 content">
                    <div class="row">
                        <div class="col-md-11 solicitado-livros">
                            <p class="display-4">Solicitar Novo Livro</p>
                            <form class="" method="post">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Gênero</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="genero">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Título</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="titulo">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Autor</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="autor">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Edição</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" name="edicao">
                                    </div>
                                </div>
                                <hr>
                                <div>
                                    <button type="submit" class="btn btn-primary">Solicitar</button>
                                    <br>
                                </div>
                            </form>
                            <div class="">
                                <% for(var i=0; i< errs.length; i++){ %>
                                    <%= errs[i].message; %>
                                    <br>
                                <% } %>
                                <% for(var i=0; i< success.length; i++){ %>
                                    <%= success[i].message; %>
                                    <br>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%-include('../partials/footer.html')%>
