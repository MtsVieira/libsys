<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/usuario.css">
    <titulo>Usuário - Editar Perfil</titulo>
    </head>

    <body>

        <%-include('partials/navbar.html')%>
        <div class="container-fluid">
            <div class="row">
                <%-include('partials/sidebar.html')%>
                <div class="col-md-10 content">
                    <div class="row">
                        <div class="col-md-11 perfil-content">
                            <p class="display-4">Editar Perfil</p>
                            <form class="" method="post">
                                <input type="text" name="user_id" value="<%=res.usuario_id%>" hidden>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Nome</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="<%=res.nome%>" name="name">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="<%=res.email%>" name="email">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Telefone</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="<%=res.telefone%>" name="phone">
                                    </div>
                                </div>
                                <hr>
                                <span>Gênero</span>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="male" value="Male" checked>
                                    <label class="form-check-label" for="exampleRadios1">
            Masculino
          </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                                    <label class="form-check-label" for="exampleRadios2">
            Feminino
          </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                                    <label class="form-check-label" for="exampleRadios2">
            Outro
          </label>
                                </div>
                                <hr>
                                <div>
                                    <button type="submit" class="btn btn-primary">Atualizar</button>
                                    <br>
                                </div>
                                <div class="">
                                    <% for(var i=0; i< errs.length; i++){ %>
                                        <%= errs[i].message; %>
                                        <br>
                                    <% } %>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

<%-include('../partials/footer.html')%>
